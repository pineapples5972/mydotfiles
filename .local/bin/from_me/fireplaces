#!/bin/zsh

case "$1" in
	floo)
	     sudo mount /dev/sda3 ~/tent/durmstrang &&
	     sudo mount /dev/sda4 ~/tent/ilvermony &&
             sudo mount /dev/sdc1 ~/tent/hogsmead &&
             sudo mount /dev/sdc2 ~/tent/muzix &&
	     sudo mount /dev/sdc3 ~/tent/castelobruxo &&
	     sudo mount /dev/sdc4 ~/tent/hogwarts &&
	     notify-send "ğŸ“¨ You are a member of:
ğŸš¢ Durmstrang
ğŸŒ² Ilvermony
ğŸ˜  Hogsmead
ğŸ¼ Muzix
ğŸ¯ Castelobruxo
ğŸ§™ Hogwarts"
	;;
	flew)
	     sudo umount /dev/sda3 &&
	     sudo umount /dev/sda4 &&
             sudo umount /dev/sdc1 &&
             sudo umount /dev/sdc2 &&
	     sudo umount /dev/sdc3 &&
	     sudo umount /dev/sdc4 &&
	     notify-send "ğŸ“¨See you next time:
ğŸš¢ Durmstrang
ğŸŒ² Ilvermony
ğŸ˜  Hogsmed
ğŸ¼ Muzix
ğŸ¯ Castelobruxo
ğŸ§™ Hogwarts"
	;;
         *)
	   notify-send "ğŸ”” Do you want to floo in or flew out from portals" ;;
esac
