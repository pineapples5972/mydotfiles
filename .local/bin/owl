#!/bin/zsh

cd ~/tent/hogsmead/Softwares/Linux_Soft/.nether/

choices="telegram\ndiscord\nmatrix\nlist"

chosen=$(echo -e "$choices" | dmenu -i)

case "$chosen" in
	telegram)
		cd ~/altar/tlg && ./nether -many -workdir ./Tux && notify-send "游불telegram closed" ;;

	twilight)
		./nether -many -workdir ./Twilight && notify-send "游불telegram closed" ;;

	discord)
		cd $APPIMAGES_PATH && ./Ripcord* ; notify-send "游불discord closed" ;;

	matrix)
		$TERMINAL -e gomuks && notify-send "游불You are out of Matrix" ;;
	list)
		notify-send "telegram
telegram
discord
matrix"
	;;

esac
