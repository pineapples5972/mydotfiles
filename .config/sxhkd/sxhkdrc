# The Simple X Hotkey Daemon is the program used by LARBS to map most of the
# dwm-independent commands.  This file is pretty readable, so I'll let you read
# it.

# Basic binds
super + r
	$TERMINAL -e $FM
super + shift + r
	$TERMINAL -e thunar
super + d
	dmenu_run
super + shift + d
	kombini
super + e
	$TERMINAL -e neomutt ; pkill -RTMIN+12 dwmblocks; rmdir ~/.abook
super + shift + e
	$TERMINAL " -e abook -C ~/.config/abook/abookrc --datafile ~/.config/abook/addressbook"

super + m
	$TERMINAL -e mocp
super + shift + m
	pamixer -t; kill -44 $(pidof dwmblocks)
super + c
	$TERMINAL -e calcurse
super + n
	vimwikia
super + shift + n
	$TERMINAL -e newsboat; pkill -RTMIN+6 dwmblocks
super + shift + c
	camtoggle
super + w
	$BROWSER
super + shift + w
	$TERMINAL -e sudo nmtui

super + space
	$XDG_CONFIG_HOME/rofi/launchers/launcher.sh

# Et cetera...
super + grave
	dmenuunicode

super + Scroll_Lock
	killall screenkey || screenkey &

super + Insert
	xdotool type $(cat ~/.local/share/larbs/snippets | dmenu -i -l 50 | cut -d' ' -f1)

super + End
	mw sync

super + shift + x
	ifinstalled slock && ( slock & xset dpms force off ; mpc pause ; pauseallmpv )
XF86Launch1
	xset dpms force off
XF86TouchpadToggle
	(synclient | grep "TouchpadOff.*1" && synclient TouchpadOff=0) || synclient TouchpadOff=1
XF86Touchpad{Off,On}
	synclient TouchpadOff={1,0}
XF86MonBrightnessDown
	xbacklight -dec 15
XF86MonBrightnessUp
	xbacklight -inc 15

# Recording

# Take screenshot
Print
	maim pic-full-$(date '+%y%m%d-%H%M-%S').png

# Pick screenshot type
shift + Print
	maimpick

# Print: Record audio or video; Del: kill recording
super + Print
	dmenurecord
super + shift + Print
	dmenurecord kill
super + Delete
	dmenurecord kill

# Pause audio
super + p
	mocp --toggle-pause
super + shift + p
	mocp --pause; pauseallmpv
# Changes to next/previous tracks
super + {comma,period}
	mocp {--prev,--next}
super + shift + period
	mocp --toggle-repeat
# Restart track
super + shift + less
	mocp --seek 0%

# Seek foward in song
super + {_,shift +} bracketright
	mocp --seek +{10,120}
# Seek backward in song
super + {_,shift +} bracketleft
	mocp --seek -{10,120}

# Increase volume
#super + {equal,plus}
#	pamixer sset Master {5,15}%+; pkill -RTMIN+10 blocks

# Decrease volume
#super {_,shift +} + minus
#	pamixer sset Master {5,15}%-; pkill -RTMIN+10 blocks
# Universal Audio mute
super + shift + m
	pamixer -t

# Increase volume
super + {equal,plus}
	pamixer --allow-boost -i 5 ; kill -44 $(pidof dwmblocks)

# Decrese volume
super {_,shift+} + minus
	pamixer --allow-boost -d 5 ; kill -44 $(pidof dwmblocks)

# Audiokeys
XF86AudioMute
	pamixer -t; kill -44 $(pidof dwmblocks)
XF86Audio{Raise,Lower}Volume
	pamixer --allow-boost {-i,-d}3; kill -44 $(pidof dwmblocks)"

XF86Audio{Next,Prev}
	mocp {--next,--prev}

XF86Audio{Pause,Play,Stop}
	mocp {--toggle-pause,--play,--stop}

XF86Audio{Rewind,Forward}
	mocp --seek {-,+}10

XF86AudioRecord
	dmenurecord

XF86AudioMedia
	$TERMINAL -e mocp

XF86PowerOff
	sysact

XF86AudioMicMute
	pactl set-source-mute @DEFAULT_SOURCE@ toggle"

XF86Calculator
	$TERMINAL -e bc -l

XF86Sleep
	prompt 'Hibernate computer?' 'sudo -A zzz'
XF86WWW
	$BROWSER
XF86DOS
	$TERMINAL
XF86ScreenSaver
	slock & xset dpms force off; moc pause; pauseallmpv
XF86TaskPane
	$TERMINAL -e htop
XF86Mail
	$TERMINAL -e neomutt; pkill -RTMIN+12 dwmblocks

XF86MyComputer
	$TERMINAL -e vifm /

# Function keys
super + shift + F1
	grep LARBSWELCOME ~/.xprofile && ( sed -i "/LARBSWELCOME/d" ~/.xprofile && notify-send "LARBS welcome message" "Welcome message disabled. Press Super+Shift+F1 again to reverse." ) || ( echo "notify-send -i "${XDG_DATA_HOME:-$HOME/.local/share}/larbs/larbs.png" \"Welcome to LARBS\" \"Press super+F1 for the help menu.\" # LARBSWELCOME" >> ~/.xprofile && notify-send "LARBS welcome message" "Welcome message re-enabled." )

# Show readme
super + F1
	groff -mom "$HOME"/.local/share/larbs/readme.mom -Tpdf | zathura -

super + F2
	ytfz

# Change display
super + F3
	displayselect

# Hibernate
super + F4
	$TERMINAL -e pulsemixer; kill -44 $(pidof dwmblocks)

#super + F5 is unbound.

super + F6
	selectbg
# toggle torrent daemon
super + F7
	showbgloc
# sync email
super + F8
	owl
# Mount a USB drive or Android device
super + {F9,F10}
	{dmenumount,dmenuumount}
super + F11
	mpv --no-cache --no-osc --no-input-default-bindings --input-conf=/dev/null --title=webcam $(ls /dev/video[0,2,4,6,8] | tail -n 1)
# sysact
super + BackSpace
	sysact &
super + shift + semicolon
	dmsearch
super + shift + b
	bookish
